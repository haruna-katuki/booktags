<h1>詳細</h1>
<div class="book-details">
  <div class="book-detail">
    <p>タイトル：<%= @book.title %></p>
    <p>編著者：<%= @book.author %></p>
    <% if @book.translator.present? %>
      <p>訳者：<%= @book.translator %></p>
    <% end %>
    <% if @book.publisher.present? %>
      <p>出版社：<%= @book.publisher %></p>
    <% end %>
    <% if @book.publish_year.present? %>
      <p>出版年：<%= @book.publish_year %></p>
    <% end %>
    <% if @book.total_page.present? %>
      <p>総ページ数：<%= @book.total_page %></p>
    <% end %>
    <% if @book.start_date.present? %>
      <p>読書開始日：<%= @book.start_date %></p>
    <% end %>
    <div class="book-post-lists">
        <% @book.posts.order("created_at DESC").each do |post| %>
          <% if post.hidden_check %>
            <div class="book-post-list">
              <div><%= link_to "読書メモを表示する", post_path(post) %></div>
            </div>
          <% else %>
            <div class="book-post-list">
              <div><%= link_to post.memo, post_path(post) %></div>
                <% if post.page.present? %>
                  <div><%= post.page %></div>
                <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% if user_signed_in? && current_user.id == @book.user_id %>
      <%= link_to "編集", edit_book_path(@book), method: :get %>
      <%= link_to "削除", book_path(@book), method: :delete %>
    <% end %>
  </div>
</div>