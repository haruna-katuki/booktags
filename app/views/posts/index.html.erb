<h1>トップページ</h1>
<p><%= link_to '本を登録する', new_book_path, class: "login" %></p>
<div class="post-lists">
  <% @posts.each do |post| %>
    <% if post.hidden_check %>
      <div class="post-list">
        <div><%= post.book.title %></div>
        <div><%= post.book.author %></div>
        <%= link_to "読書メモを表示する", post_path(post) %>
        <div><%= post.book.user.nickname %></div>
      </div>
    <% else %>
      <div class="post-list">
        <div><%= post.book.title %></div>
        <div><%= post.book.author %></div>
        <div><%= link_to post.memo, post_path(post) %></div>
        <% if post.page.present? %>
          <div><%= post.page %></div>
        <% end %>
        <div><%= post.book.user.nickname %></div>
      </div>
    <% end %>
  <% end %>
</div>