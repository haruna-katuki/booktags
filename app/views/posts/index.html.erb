<div class="main-content">
  <div class="post-lists">
    <% @posts.each do |post| %>
      <% if post.hidden_check %>
        <div class="post-hidden-list">
          <div class="post-upper">
            <div class="post-upper-title"><%= post.book.title %></div>
            <div class="post-upper-author"><%= post.book.author %></div>
          </div>
          <div class="post-hidden"><%= link_to "読書メモを表示する", post_path(post) %></div>
          <div class="post-hidden-nickname"><%= post.book.user.nickname %></div>
        </div>
      <% else %>
        <div class="post-list">
          <div class="post-upper">
            <div class="post-upper-title"><%= post.book.title %></div>
            <div class="post-upper-author"><%= post.book.author %></div>
          </div>
          <div class="post-memo"><%= link_to post.memo, post_path(post) %></div>
          <div class="post-under">
            <div id="like-btn<%= post.id %>", class="post-under-like">
              <%= render partial: "likes/like", locals: { post: post } %>
            </div>
            <% if post.page.present? %>
              <div class="post-under-page"><%= post.page %>ページ</div>
            <% end %>
            <div class="post-under-nickname"><%= post.book.user.nickname %></div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>